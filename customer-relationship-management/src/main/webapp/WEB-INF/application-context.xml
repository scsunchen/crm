    <bean id="dataSource_Dragan" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="jdbc:postgresql://localhost:5432/robfink"/>
        <property name="driverClassName" value="org.postgresql.Driver"/>
        <property name="username" value="bdragan"/>
    </bean>
    -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="url" value="jdbc:oracle:thin:@94.127.3.157:1521:xe"/>
        <property name="driverClassName" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="username" value="devel"/>
        <property name="password" value="devel"/>
    </bean>
    <bean id="jpaDialect" class="org.springframework.orm.jpa.vendor.HibernateJpaDialect"/>
    <bean id="userService" class="com.invado.customer.relationship.service.UserDataService"/>
    <bean id="localDateConverter" class="com.invado.core.domain.LocalDateConverter"/>


    <bean id="authenticationManager" class="org.springframework.security.authentication.ProviderManager">
        <constructor-arg>
            <list>
                <ref bean="authenticationProvider"/>
            </list>
        </constructor-arg>
    </bean>

    <bean id="authenticationProvider" class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
        <property name="userDetailsService" ref="userService"/>
    </bean>


</beans>

